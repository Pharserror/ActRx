{
  "name": "ActX",
  "version": "0.1.0",
  "description": "An easy-to-use action creator for Redux",
  "main": "dist/actx.js",
  "author": "Adam Lind <sunboxnet@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Pharserror/ActX",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/pharserror/ActX.git"
  },
  "keywords": [
    "Action",
    "Flux",
    "React",
    "Redux"
  ],
  "ignore": [
    "**/.*",
    "node_modules",
    "test",
    "tests"
  ],
  "engines": {
    "node": "5.0.0"
  },
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "testRegex": "/test/",
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "devDependencies": {
    "ActR": "git+ssh://git@github.com:Pharserror/ActR.git#master",
    "babel-jest": "21.2.0",
    "jest": "21.2.1",
    "jest-cli": "21.2.1",
    "webpack-dev-middleware": "1.12.0"
  },
  "dependencies": {
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "webpack": "^3.5.5"
  }
}
